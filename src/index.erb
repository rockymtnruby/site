<h1> New Example</h1>
<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" stop-color="yellow" stop-opacity="0.7"/>
      <stop offset="100%" stop-color="red" stop-opacity="0.7"/>
    </linearGradient>
    <linearGradient id="grad2" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" stop-color="blue" stop-opacity="0.7"/>
      <stop offset="100%" stop-color="green" stop-opacity="0.7"/>
    </linearGradient>
  </defs>
  <!-- Centered Axes -->
  <line x1="0" y1="50" x2="100" y2="50" stroke="gray" stroke-width="1"/>
  <line x1="50" y1="0" x2="50" y2="100" stroke="gray" stroke-width="1"/>
  <!-- Polygons, scaled to fit 100x100 and centered -->
  <g>
    <!-- Square, centered at (50,50), size 40x40 -->
    <polygon points="30,30 70,40 70,70 40,70" fill="url(#grad1)" />
    <!-- Trapezoid, centered and scaled -->
    <polygon points="35,70 65,70 70,40 40,40" fill="url(#grad2)" />
  </g>
</svg>
