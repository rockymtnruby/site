<footer
    class="wow fadeInUp bg-secondary-800"
    data-wow-delay=".15s"
>
    <div class="container pt-8">
      <div class="flex justify-between border-b-2 border-white">
        <div class="w-1/2">
          <a
            href="/"
            class="mb-6 inline-block max-w-[160px] w-[60px]"
          >
            <img
              src="/images/logo-white.svg"
              alt="logo"
              class="max-w-full"
              />
          </a>
        </div>
        <div class="flex w-1/2 justify-end">
          <% site.data.social_networks.each do |network| %>
            <a
              rel="me"
              href="<%= network.link %>"
              class="px-3 text-[#dddddd] hover:text-white"
              target="_blank"
            >
              <%= svg "/assets/icons/#{network.icon}.svg" %>
            </a>
          <% end %>
        </div>
      </div>
      <div class="flex justify-between">
        <div class="w-1/2">
          <% sponsors = site.data.sponsors.select {|sponsor| sponsor.enabled && sponsor.footer } %>
          <% unless sponsors.empty? %>
            <div class="mb-10 w-full">
                <h4 class="mb-4 text-lg font-semibold text-white text-left">Sponsored by</h4>
                <ul class="flex flex-col flex-wrap items-start">
                    <% sponsors.each do | sponsor | %>
                        <% if sponsor.enabled %>
                            <%= render 'sponsor', sponsor: sponsor %>
                        <% end %>
                    <% end %>
                </ul>
            </div>
          <% end %>
        </div>
        <div class="w-1/2 pb-4 md:mt-8 flex flex-col justify-end">
          <div class="flex flex-col md:flex-row items-end gap-2 md:justify-end mb-4">
            <div class="text-white">Designed by</div>
            <img src="../../images/sponsors/FlagrantLogo_White.svg" alt="Flagrant" class="inline-block w-24 h-auto" />
          </div>
          <div class="flex text-white text-xs text-right justify-end">Â©2025 Rock Mountain Ruby. All Rights Reserved.</div>
        </div>
      </div>
    </div>
</footer>
